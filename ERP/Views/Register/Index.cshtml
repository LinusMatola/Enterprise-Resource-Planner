@model KFCPortal.Models.Login

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}
@using (Html.BeginForm("Authenticate", "Register", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src="https://ladima.africa/wp-content/uploads/2020/07/Kenya-Film-Commission.jpg" alt="User profile picture">
                </div>
                <div class="login-logo" style="color: black">
                    <a><h4>KENYA FILM COMMISSION</h4></a>
                    <h4><strong>Register</strong></h4>
                </div>

                @*<form id="loginForm">*@
               
                <div class="form-group">
                    @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-15">
                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idnumber, htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-15">
                        @Html.EditorFor(model => model.idnumber, new { htmlAttributes = new { @class = "form-control" } })
                   l     @Html.ValidationMessageFor(model => model.idnumber, "", new { @class = "text-danger" })
                    </div>
                </div>

               
                @*</form>*@
                <div class="form-group">
                    <button class="btn btn-info form-control" type="submit"><i class="glyphicon glyphicon-log-in"></i> Register</button>
                </div>
                <div class="form-group">
                    <a style="float:left">Forgot Password ?</a><a style="float:right; cursor:pointer"> @Html.ActionLink("Login", "Login")</a>
                </div>

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
