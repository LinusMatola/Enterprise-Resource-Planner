@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

@using (Html.BeginForm("PrintP9", "P9", FormMethod.Post))
{
<br />

<div class="container">
    <h3><strong>P9 Report</strong></h3>
    <div class="row">

        <div class="col-md-3">
            <div class="form-group">
                <label for="date">Year:</label>
                @Html.DropDownList("linktoYearId", null, "--Select--", new
           {
               @id = "ddlYears",
               @onChange = "return ChangeYear(this)",
               @class = "form-control",
               @style = "width:200px"
           })

            </div>
        </div>
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <input type="submit" value="Generate Report" id="btnGenerateReport" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" />
            @*<a href="@Html.Action("PrintP9","P9")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>*@
        </div>
    </div>

</div>

<script type="text/javascript">
    function ChangeYear(obj) {
        @KFCPortal.Utilities.VirtualParameter.cMonth = obj.value;
    }

</script>

}
