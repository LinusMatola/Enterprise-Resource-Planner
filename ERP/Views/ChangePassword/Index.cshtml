@model KFCPortal.Models.InternalPassword
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="login-logo" style="color: black">

                    <h4><strong>Change Password</strong></h4>
                </div>

                <form id="loginForm">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                       
                        <div class="col-md-15">
                            @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Old Password" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                       
                        <div class="col-md-15">
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "New Password" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                       
                        <div class="col-md-15">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Confirm Password" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-success form-control col-md-5" type="submit"><i class="glyphicon glyphicon-log-in"></i> Save</button>
                    </div>
                </form>
            </div>

            <!-- /.login-card-body -->
        </div>
    </div>
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>



