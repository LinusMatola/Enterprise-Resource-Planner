@model KFCPortal.Models.Login

@{
    ViewBag.Title = "forgotpassword";
    Layout = "~/Views/Shared/View.cshtml";
}
@using (Html.BeginForm("sepass", "Login", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src="https://ladima.africa/wp-content/uploads/2020/07/Kenya-Film-Commission.jpg" alt="User profile picture">
                </div>
                <div class="login-logo" style="color: black">
                    <a><h4>KENYA FILM COMMISSION</h4></a>

                </div>

                @*<form id="loginForm">*@

                <p class="login-box-msg">Submit form to set a password for this account</p>


                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.username1, new { htmlAttributes = new { @class = "form-control", type = "text", id = "startkey", placeholder = "Start key" } })

                </div>
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Password" } })

                </div>
                <div class="form-group has-feedback">
                    @Html.EditorFor(model => model.passconfirm, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Confirm Password" } })
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>

                @*</form>*@
                <div class="form-group">
                    <button class="btn btn-info form-control" type="submit"><i class="glyphicon glyphicon-log-in"></i>Submit</button>
                </div>
               
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script language='javascript' type='text/javascript'>
           window.onload= function(){
               alert("@ViewBag.Message");
               $('#startkey').empty();
           };
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
