@model KFCPortal.Models.Login

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/View.cshtml";
}
@using (Html.BeginForm("Authenticate", "Login", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src="https://ladima.africa/wp-content/uploads/2020/07/Kenya-Film-Commission.jpg" alt="User profile picture">
                </div>
                <div class="login-logo" style="color: black">
                    <a><h4>KENYA FILM COMMISSION</h4></a>
                    
                </div>

                @*<form id="loginForm">*@

                <div class="form-group">
                    <div class="col-md-15">
                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Staff ID" } })
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                   <div class="col-md-15">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Password" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>


                @*</form>*@
                <div class="form-group">
                    <button class="btn btn-info form-control" type="submit"><i class="glyphicon glyphicon-log-in"></i>Login</button>
                </div>
                <p class="mb-1">
                    <strong><a href="@Url.Action("Register", "Login")" style="color: black">I forgot my password</a></strong>
                </p>
                <p class="mb-0">
                    <strong><a href="@Url.Action("Register", "Login")" style="color: black" class="text-center">Register Staff</a></strong>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
